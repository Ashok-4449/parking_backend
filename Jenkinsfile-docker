pipeline {
  agent any
  tools {maven "M2_HOME"} // M2_HOME is the variable which is mentioned in global tool
  environment {
    registry = "sushant227/parkingbackend"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git branch: 'master', url : 'https://github.com/Sushant227/parking_backend.git'
      }
    }
    stage('Build and Deploy') {
      steps {
        sh "mvn clean deploy sonar:sonar -Dmaven.test.skip=true"
      }
    }   
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
  }
}
